<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
	     backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true">
       
	<testsuites>
		<testsuite name="Workcommer">
			<!-- I think we have to run tests in the workspace directory because that's were the webserver looks!! -->
			<directory suffix="Test.php">.</directory>							
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-html" target="../build/coverage" title="Workcommer"
			charset="UTF-8" yui="true" highlight="true"
			lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="../build/logs/clover.xml"/>
		<log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>

	<filter_off>
		<blacklist>
			<directory>C:/Users/nick/workspace/Workcommer/test</directory>
		</blacklist>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<!-- I think we have to run tests in the workspace directory because that's were the webserver looks!! -->
			<directory suffix=".php">..</directory>
			<exclude>
				<directory>../test</directory>
			</exclude>
		</whitelist>
	</filter_off>

	<php>
		<var name="DB_DSN" value="mysql:host=localhost;dbname=test_Workcommer" />
		<var name="DB_USER" value="test" />
		<var name="DB_PASSWD" value="sas0527" />
		<var name="DB_DBNAME" value="test_Workcommer" />
		<var name="DB_SYNCNAME" value="Workcommer" />
		<var name="DB_DEBUG" value="0"/>
		<var name="TESTMODE" value="test"/>		
	</php>
</phpunit>